# Stripe Configuration for Sandbox/Testing
# Copy to your .env file and update with your actual Stripe test keys

# Stripe Test Keys (get from https://dashboard.stripe.com/test/apikeys)
STRIPE_SECRET_KEY=sk_test_YOUR_TEST_SECRET_KEY_HERE
STRIPE_PUBLIC_KEY=pk_test_YOUR_TEST_PUBLISHABLE_KEY_HERE

# Stripe Webhook Secret (get from webhook endpoint settings)
STRIPE_WEBHOOK_SECRET=whsec_YOUR_WEBHOOK_SECRET_HERE

# Monthly Subscription Price IDs (create in Stripe Dashboard)
# These are example price IDs - create your own in Stripe
STRIPE_PRICE_BASIC_SUB=price_1234567890BASIC
STRIPE_PRICE_PRO_SUB=price_1234567890PRO

# Usage-based pricing is handled automatically at $1.00/1000 words
# No need for separate price IDs for usage billing

# Optional: Customer ID for testing
STRIPE_CUSTOMER_ID=cus_test_customer_id